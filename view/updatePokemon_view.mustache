<section class="container align-content-lg-center">
    <h1 class="">POKEMON</h1>
    <div class="container">
        {{#pokemon}}
            <form action="/admin/saveChanges" method="post" enctype="multipart/form-data">
                <input type="hidden" name ='id' value="{{id}}">
                <div class="form-group"> <!-- Agregamos la clase form-group para agrupar los elementos relacionados -->
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" value="{{nombre}}" class="form-control"> <!-- Agregamos la clase form-control para dar el mismo tamaño a los inputs -->
                </div>
                <div class="row">
                    <div class="col-md-6 form-group"> <!-- Agregamos la clase col-md-6 para que ocupe la mitad del ancho en dispositivos medianos y más grandes -->
                        <label for="tipo">Tipo</label>
                        <select name="tipo" id="tipo" class="form-control"> <!-- Agregamos la clase form-control para dar el mismo tamaño al select -->
                            <option value="{{tipo}}">{{tipo}}</option>
                            {{#tipos}}
                                <option value="{{pasa}}">{{pasa}}</option>
                            {{/tipos}}
                        </select>
                    </div>
                    <div class="col-md-6"> <!-- Agregamos la clase col-md-6 para que ocupe la mitad del ancho en dispositivos medianos y más grandes -->
                        <label for="habilidad">Habilidad</label>
                        <input type="text" id="habilidad" name="habilidad" class="form-control" value="{{habilidad}}">
                    </div>
                </div>


                <div>
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <img src="../public/imagenes/pokemon/{{imagenLink}}" alt="Imagenn pokemon">
                        </div>
                        <div class="col-12 col-md-8">
                            <h3>DESCRIPCIÓN</h3>
                         <textarea class="w-100 form-control" id="miTextarea" name="descripcion" rows="6" cols="90" >{{descripcion}}
                        </textarea>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Enviar</button>
                </div>
            </form>
        {{/pokemon}}
    </div>


</section>